<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/lock_screen_settings">

     <!-- SECURITY -->
     <PreferenceCategory
        android:key="bam_ls_seurity"
        android:title="@string/bamlockscreen_security" >

     <PreferenceScreen
         android:key="screen_security"
         android:fragment="com.android.settings.SecuritySettings"
         android:title="@string/screen_security_category"
         android:summary="@string/screen_security_summary">
         <extra android:name="cm_security" android:value="true" />
     </PreferenceScreen>

        <CheckBoxPreference
            android:key="lockscreen_quick_unlock_control"
            android:title="@string/lockscreen_quick_unlock_control_title"
            android:summary="@string/lockscreen_quick_unlock_control_summary" />

   </PreferenceCategory>

   <!-- STYLE -->
   <PreferenceCategory
        android:key="bam_ls_style"
        android:title="@string/bamlockscreen_style" >

     <ListPreference
        android:key="lockscreen_background"
        android:persistent="false"
        android:dialogTitle="@string/lockscreen_custom_background_title"
        android:title="@string/lockscreen_custom_background_title"
        android:entries="@array/lockscreen_background_entries"
        android:entryValues="@array/lockscreen_background_values" />

        <CheckBoxPreference
            android:key="lockscreen_battery"
            android:title="@string/lockscreen_battery_title"
            android:summary="@string/lockscreen_battery_summary" />

        <CheckBoxPreference
            android:key="lockscreen_hide_initial_page_hints"
            android:title="@string/lockscreen_hide_initial_page_hints_title"
            android:summary="@string/lockscreen_hide_initial_page_hints_summary" />

       <CheckBoxPreference
            android:key="lockscreen_minimize_challenge"
            android:title="@string/lockscreen_minimize_challenge_title"
            android:summary="@string/lockscreen_minimize_challenge_summary" />

        <CheckBoxPreference
            android:key="lockscreen_longpress_challenge"
            android:title="@string/lockscreen_longpress_challenge_title"
            android:summary="@string/lockscreen_longpress_challenge_summary" />

    <CheckBoxPreference
        android:key="see_through"
        android:title="@string/see_through_title"
        android:summary="@string/see_through_summary" />

   </PreferenceCategory>

   <!-- WIDGETS -->
   <PreferenceCategory
        android:key="bam_ls_widgets"
        android:title="@string/bamlockscreen_widgets" >

    <CheckBoxPreference
        android:key="home_screen_widgets"
        android:title="@string/home_screen_widgets_title"
        android:summary="@string/home_screen_widgets_summary" />

        <CheckBoxPreference
            android:key="lockscreen_use_widget_container_carousel"
            android:title="@string/lockscreen_use_widget_container_carousel_title"
            android:summary="@string/lockscreen_use_widget_container_carousel_summary" />

        <CheckBoxPreference
            android:key="lockscreen_unlimited_widgets"
            android:title="@string/lockscreen_unlimited_widgets_title"
            android:summary="@string/lockscreen_unlimited_widgets_summary" />

   </PreferenceCategory>

   <!-- SHORTCUTS -->
   <PreferenceCategory
        android:key="bam_ls_shortcuts"
        android:title="@string/bamlockscreen_shortcuts" >

    <PreferenceScreen
        android:key="lock_screen_shortcuts"
        android:fragment="com.android.settings.paranoid.Shortcuts"
        android:title="@string/lock_screen_shortcuts_title"
        android:summary="@string/lock_screen_shortcuts_summary" />

     <Preference
        android:fragment="com.android.settings.cyanogenmod.LockscreenTargets"
        android:key="lockscreen_targets"
        android:summary="@string/lockscreen_target_summary"
        android:title="@string/lockscreen_target_title" />

     <PreferenceScreen
        android:fragment="com.android.settings.cyanogenmod.LockscreenButtons"
        android:key="lockscreen_buttons"
        android:title="@string/lockscreen_buttons_title"
        android:summary="@string/lockscreen_buttons_summary" />

    </PreferenceCategory>

   <!-- MUSIC -->
   <PreferenceCategory
        android:key="bam_ls_music"
        android:title="@string/bamlockscreen_music" >

        <CheckBoxPreference
            android:key="volume_rocker_wake"
            android:title="@string/volume_rocker_wake_title"
            android:summary="@string/volume_rocker_wake_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="volume_music_controls"
            android:title="@string/volume_music_controls_title"
            android:summary="@string/volume_music_controls_summary" />

    </PreferenceCategory>

   <!-- MISC -->
   <PreferenceCategory
        android:key="bam_ls_misc"
        android:title="@string/bamlockscreen_misc" >

            <CheckBoxPreference
                android:key="lockscreen_auto_rotate"
                android:title="@string/lockscreen_auto_rotate_title"
                android:summary="@string/lockscreen_auto_rotate_summary" />

    </PreferenceCategory>

</PreferenceScreen>
